{
  "name": "v-php-framework-dev",
  "version": "0.1.0",
  "private": true,
  "description": "Development tooling for the v-php-framework repository",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint \"root/public/assets/js/**/*.js\" --ignore-pattern \"root/vendor/**\"",
    "lint:css": "stylelint \"root/public/assets/css/**/*.css\" --ignore-pattern \"root/vendor/**\" --allow-empty-input"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
